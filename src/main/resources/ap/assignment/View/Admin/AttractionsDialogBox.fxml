<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Admin.AttractionDialogBoxController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add New Attraction" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <TextField fx:id="idField" promptText="ID" />
    <TextField fx:id="nameField" promptText="Name" />
    <TextField fx:id="locationField" promptText="Location" />
    <TextField fx:id="altitudeField" promptText="Altitude (m)" />

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" />
        <Button text="Add" onAction="#handleAdd" />
    </HBox>
</VBox>
