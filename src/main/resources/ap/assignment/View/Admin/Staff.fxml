<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Admin.StaffController">

    <VBox prefHeight="400" prefWidth="600" spacing="10">

        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>

        <!-- Title -->
        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Staff Management" />

        <!-- Buttons -->
        <HBox spacing="10">
            <Button fx:id="addButton" onAction="#handleAddStaff" text="Add Staff" />
            <Button fx:id="updateButton" onAction="#handleUpdateStaff" text="Update Staff" />
            <Button fx:id="deleteButton" onAction="#handleDeleteStaff" text="Delete Staff" />
        </HBox>

        <!-- Staff Table -->
        <TableView fx:id="staffTable">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150" text="Name" />
                <TableColumn fx:id="contactColumn" prefWidth="150" text="Contact" />
                <TableColumn fx:id="emailColumn" prefWidth="150" text="Email" />
            </columns>
        </TableView>

    </VBox>
</AnchorPane>
