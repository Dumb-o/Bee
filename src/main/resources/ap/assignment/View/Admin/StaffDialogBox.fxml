<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Admin.StaffDialogBoxController"
            prefHeight="350.0" prefWidth="400.0">

    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <!-- Title -->
        <Label text="Add New Staff" style="-fx-font-weight: bold; -fx-font-size: 16px;" />

        <!-- Staff ID Field -->
        <HBox spacing="10">
            <Label text="Staff ID:" />
            <TextField fx:id="staffIdField" promptText="Enter Staff ID" />
        </HBox>

        <!-- Name Field -->
        <HBox spacing="10">
            <Label text="Name:" />
            <TextField fx:id="nameField" promptText="Enter Staff Name" />
        </HBox>

        <!-- Contact Field -->
        <HBox spacing="10">
            <Label text="Contact:" />
            <TextField fx:id="contactField" promptText="Enter Staff Contact" />
        </HBox>

        <!-- Email Field -->
        <HBox spacing="10">
            <Label text="Email:" />
            <TextField fx:id="emailField" promptText="Enter Staff Email" />
        </HBox>

        <!-- Position Field -->
        <HBox spacing="10">
            <Label text="Position:" />
            <TextField fx:id="positionField" promptText="Enter Staff Position" />
        </HBox>

        <!-- Action Buttons -->
        <HBox spacing="20" alignment="center">
            <Button fx:id="saveButton" text="Save" onAction="#handleSaveStaff" />
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" />
        </HBox>

    </VBox>
</AnchorPane>
