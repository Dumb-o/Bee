<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="361.0" prefWidth="632.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ap.assignment.indira.RegisterController">

    <children>
        <Label layoutX="230.0" layoutY="15.0" prefHeight="40.0" prefWidth="226.0"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" text="%title" />

        <VBox layoutX="100.0" layoutY="70.0" prefHeight="281.0" prefWidth="554.0"
              spacing="10.0" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="70.0">
            <children>

                <!-- Email -->
                <HBox spacing="10">
                    <Label prefWidth="120" text="%email" />
                    <TextField fx:id="emailField" prefWidth="250" />
                </HBox>

                <!-- Staff Name -->
                <HBox spacing="10">
                    <Label prefWidth="120" text="%staff.name" />
                    <TextField fx:id="nameField" prefWidth="250" />
                </HBox>

                <!-- Address -->
                <HBox spacing="10">
                    <Label prefWidth="120" text="%address" />
                    <TextField fx:id="addressField" prefWidth="250" />
                </HBox>

                <!-- Nationality -->
                <HBox spacing="10">
                    <Label prefWidth="120" text="%nationality" />
                    <TextField fx:id="nationalityField" prefWidth="250" />
                </HBox>

                <!-- password -->
                <HBox spacing="10">
                    <Label prefWidth="120" text="%password" />
                    <PasswordField fx:id="passwordField" prefWidth="250" />
                </HBox>

                <!-- Phone -->
                <HBox spacing="10">
                    <Label prefWidth="120" text="%phone" />
                    <TextField fx:id="phoneField" prefWidth="250" />
                </HBox>

                <!-- Date of Birth -->
                <HBox spacing="10">
                    <Label prefWidth="120" text="%dob" />
                    <DatePicker fx:id="dobPicker" prefWidth="250" />
                </HBox>

                <!-- Buttons -->
                <HBox alignment="center" spacing="20">
                    <Button fx:id="registerButton" text="%register" onAction="#onRegister"/>
                    <Button fx:id="backButton" text="%back" onAction="#onBack"/>
                </HBox>

            </children>
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
