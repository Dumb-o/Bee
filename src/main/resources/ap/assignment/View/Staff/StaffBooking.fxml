<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Staff.StaffBookingsController">

    <top>
        <VBox spacing="0">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white;">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <Region HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="languageBox" prefWidth="120.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button fx:id="logoutButton" onAction="#setLogin" style="-fx-background-color: #0033cc; -fx-text-fill: white;" text="%button.logout" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #f5f5f5;">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                <Button onAction="#setBooking" text="%nav.booking" />
                <Button onAction="#viewBookings" text="%nav.view.booking" />
                <Button onAction="#viewAttractions" text="%nav.view.attractions" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="20">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <Label text="%header.bookings">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>

                <TableView fx:id="bookingTable">
                    <columns>
                        <TableColumn fx:id="customerNameColumn" prefWidth="200.0" text="%customer.name" />
                        <TableColumn fx:id="attractionNameColumn" prefWidth="200.0" text="%attraction.name" />
                        <TableColumn fx:id="dateColumn" prefWidth="150.0" text="%date" />
                        <TableColumn fx:id="timeColumn" prefWidth="100.0" text="%time" />
                        <TableColumn fx:id="statusColumn" prefWidth="150.0" text="%status" />
                    </columns>
                </TableView>
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>